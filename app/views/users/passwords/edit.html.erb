<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <h2>Alterar senha</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "Nova senha", required: true, autofocus: true, hint: ("pelo menos #{@minimum_password_length} caracteres" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirme sua senha", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Alterar minha senhar" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
